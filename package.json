
{
  "name": "ultragram",
  "productName": "UltraGram",
  "version": "1.0.0",
  "description": "Global P2P Neon Messenger",
  "main": "electron-main.js",
  "author": "UltraGram Architect",
  "license": "MIT",
  "scripts": {
    "dev": "vite --host",
    "build": "vite build",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview",
    "electron": "electron ."
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "@google/genai": "^1.34.0"
  },
  "devDependencies": {
    "electron": "^26.1.0",
    "electron-builder": "^24.6.3",
    "typescript": "^5.0.2",
    "vite": "^7.3.0",
    "@vitejs/plugin-react": "^4.0.3"
  },
  "build": {
    "appId": "com.ultragram.app",
    "productName": "UltraGram",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": true,
      "allowToChangeInstallationDirectory": false
    },
    "files": [
      "dist/**/*",
      "electron-main.js"
    ],
    "directories": {
      "output": "release"
    }
  }
}
